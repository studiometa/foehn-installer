{
    "name": "studiometa/foehn-installer",
    "description": "Composer plugin that generates the WordPress web root, symlinks, and wp-config.php for Foehn projects.",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Studio Meta",
            "email": "agence@studiometa.fr",
            "homepage": "https://www.studiometa.fr"
        }
    ],
    "keywords": [
        "wordpress",
        "composer-plugin",
        "installer",
        "foehn"
    ],
    "require": {
        "php": "^8.5",
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Studiometa\\FoehnInstaller\\": "src/"
        }
    },
    "extra": {
        "class": "Studiometa\\FoehnInstaller\\Plugin"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
